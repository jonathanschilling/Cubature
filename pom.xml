	<scm>
		<url>https://github.com/jonathanschilling/Cubature</url>
		<connection>scm:git:git@github.com:jonathanschilling/Cubature.git</connection>
		<developerConnection>scm:git:git@github.com:jonathanschilling/Cubature.git</developerConnection>
